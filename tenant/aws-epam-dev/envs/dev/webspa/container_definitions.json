{
  "name"      : "${container_name}",
  "image"     : "${image}",
  "essential" : true,
  "cpu": 64,
  "memory": 128,
  "port_mappings" : [
    {
      "name": "${container_name}-${container_port}",
      "containerPort": 80,
      "hostPort": 0,
      "protocol": "tcp"
    }
  ],
  "environment" : [
    {"name": "ASPNETCORE_ENVIRONMENT", "value": "Production"},
    {"name": "ASPNETCORE_URLS", "value": "http://0.0.0.0:80"},
    {"name": "UseCustomizationData", "value": "True"},
    {"name": "IdentityUrl", "value": "${subdomains.identity_api}"},
    {"name": "PurchaseUrl", "value": "${subdomains.catalog_api}"},
    {"name": "BasketUrl", "value": "${subdomains.basket_api}"},
    {"name": "OrdersUrl", "value": "${subdomains.ordering_api}"},
    {"name": "SignalrHubUrl", "value": "${subdomains.ordering_signalrhub}"}
  ],
  "readonly_root_filesystem": false,
  "log_configuration" : {
    "logDriver" : "awslogs",
    "options" : {
        "awslogs-region" : "${region}",
        "awslogs-group" : "${cloudwatch_log_group_name}",
        "awslogs-stream-prefix" : "ecs"
    }
  }
}
